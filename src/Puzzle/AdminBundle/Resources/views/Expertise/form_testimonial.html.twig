{% trans_default_domain 'messages' %}

{{ form_start(form) }}
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-7-10 uk-width-large-7-10">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-form-row">
                        {{ form_label(form.author, null, {'label_attr': {'class': 'uk-form-label'}}) }}
                        {{ form_widget(form.author, {'attr': {'class': 'md-input'}}) }}
                    </div>
                    <div class="uk-form-row">
                        {{ form_label(form.company, null, {'label_attr': {'class': 'uk-form-label'}}) }}
                        {{ form_widget(form.company, {'attr': {'class': 'md-input'}}) }}
                    </div>
                    <div class="uk-form-row">
                        {{ form_label(form.position, null, {'label_attr': {'class': 'uk-form-label'}}) }}
                        {{ form_widget(form.position, {'attr': {'class': 'md-input'}}) }}
                    </div>
                    <div class="uk-form-row">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'uk-form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'md-input', 'rows': 10, 'cols': 10}}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-width-xLarge-3-10 uk-width-large-3-10">
            {{ render(controller('MediaBundle:Admin:embedFile', {'formData': form.picture, 'data': testimonial is defined ? testimonial.picture : null, 'type': 'picture', 'context': 'expertise/testimonial', 'multiple': false })) }}
        </div>
    </div>

    <div class="uk-text-center uk-margin-top">
        <a class="md-btn md-btn-default" href="{{ url('admin_expertise_testimonial_list') }}">
            <i class="fa fa-arrow-left"></i>
            {{ 'button.cancel'|trans }}
        </a>
        <button class="md-btn md-btn-success" type="submit">
            {% if testimonial is defined %}
                {{ 'button.update'|trans }}
            {% else %}
                {{ 'button.add'|trans }}
            {% endif %}
            <i class="fa fa-check"></i>
        </button>
    </div>
{{ form_end(form) }}