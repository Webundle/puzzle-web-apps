{% trans_default_domain 'messages' %}

{{ form_start(form) }}
<div class="uk-modal-body">
    <div class="uk-form-row">
        {{ form_label(form.name, null, {'label_attr': {'class': 'uk-form-label'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'md-input'}}) }}
    </div>
    <div class="uk-form-row">
        {{ form_label(form.icon, null, {'label_attr': {'class': 'uk-form-label'}}) }}
        {{ form_widget(form.icon, {'attr': {'class': 'md-input'}}) }}
    </div>
    <div class="uk-form-row">
        {{ form_label(form.description, null, {'label_attr': {'class': 'uk-form-label'}}) }}
        {{ form_widget(form.description, {'id': 'wysiwyg_ckeditor', 'attr': {'class': 'md-input', 'rows': 5}}) }}
    </div>
</div>
<div class="uk-modal-footer uk-text-right">
    <button type="button" class="md-btn uk-modal-close">
        <i class="fa fa-arrow-left"></i>
        {{ "button.close"|trans }}
    </button>
    <button class="md-btn md-btn-success" type="submit">
        {% if feature is defined %}
            {{ 'button.update'|trans }}
        {% else %}
            {{ 'button.add'|trans }}
        {% endif %}
        <i class="fa fa-check"></i>
    </button>
</div>
{{ form_end(form) }}