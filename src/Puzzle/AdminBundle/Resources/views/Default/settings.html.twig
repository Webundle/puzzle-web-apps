{% set active = "admin" %}

{% set subactive = "admin_settings" %}

{% extends 'AdminBundle::layout_table.html.twig' %}

{% block title %}{{ parent() }} - {{ "admin.content.settings" }}{% endblock %}

{% block content %}
    <div id="page_content">
        <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
            <h1>{{ "admin.title"|trans }} - {{ "admin.content.settings"|trans }}</h1>
        </div>
        <div id="page_content_inner">
        	{{ form_start(form, {'class': 'uk-form-stacked', 'id': 'page_settings'}) }}
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-large-1-3">
                        <div class="md-card">
                            <div class="md-card-content">
                                <div class="uk-form-row">
                                    {{ form_row(form.name) }}
                                </div>
                                <div class="uk-form-row">
                                   {{ form_row(form.description) }}
                                </div>
                                <div class="uk-form-row">
                                    {{ form_row(form.email) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="uk-width-large-1-3">
                        <div class="md-card">
                            <div class="md-card-content">
                                <div class="uk-form-row">
                                    {{ form_row(form.timeFormat) }}
                                </div>
                                <div class="uk-form-row">
                                    {{ form_row(form.dateFormat) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="uk-width-large-1-3">
                    </div>
                </div>
                <div class="md-fab-wrapper">
                    {{ form_widget(form.save, {'id': 'save'}) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('bundles/admin/js/pages/page_settings.min.js')}}"></script>
{% endblock %}