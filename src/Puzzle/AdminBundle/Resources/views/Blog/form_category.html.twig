{% trans_default_domain 'messages' %}
    
<div class="uk-width-medium-6-10 uk-container-center">
   {{ form_start(form) }}
		<div class="md-card">
            <div class="md-card-content">
                <div class="uk-form-row">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'uk-form-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'md-input'}}) }}
                </div>
                <div class="uk-form-row">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'uk-form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class' : 'md-input'}}) }}
                </div>
            </div>
        </div>

        {{ render(controller('MediaBundle:Admin:embedFile', {'formData': form.picture, 'data': category is defined ? category.picture : null, 'type': 'picture', 'context': 'blog/category', 'multiple': false })) }}

        <div class="uk-text-center uk-margin-top">
            <a class="md-btn md-btn-default" href="{{ url('admin_blog_category_list') }}">
                <i class="fa fa-arrow-left"></i>
                {{ 'button.cancel'|trans }}
            </a>
            <button class="md-btn md-btn-success" type="submit">
                {% if category is defined %}
                    {{ 'button.update'|trans }}
                {% else %}
                    {{ 'button.add'|trans }}
                {% endif %}
                <i class="fa fa-check"></i>
            </button>
        </div>
    {{ form_end(form) }}
</div>