{% trans_default_domain 'messages' %}

{% extends 'AdminBundle:Contact:layout.html.twig' %}

{% block title %}{{ parent() }} - {{ "contact.update"|trans|capitalize }} {{ contact }} {% endblock %}

{% block breadcrumbmodule %}
    {{ parent() }}
    <a href=" {{ url('admin_contact_list') }} ">
       {{ 'contact.list'|trans|capitalize }}
    </a>
    <i class="fa fa-chevron-right"></i>
    <em>{{ "contact.update"|trans|capitalize }}</em>
{% endblock %}

{% block content %}
    <div id="page_content_inner">
        {% include 'AdminBundle:Contact:form_contact.html.twig' with { 'form': form, 'contact': contact } %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('#select-user').change(function(){
        	console.log($(this).val());
        	if ($(this).val() != '') {
        		$('input').removeAttr('required');
        	}
        });
    </script>
{% endblock %}
