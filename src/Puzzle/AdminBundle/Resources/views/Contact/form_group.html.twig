{% trans_default_domain 'messages' %}

{{ form_start(form, {'class': 'uk-form-stacked'}) }}
    <div class="uk-form-row">
        {{ form_label(form.name, null, {'label_attr': {'class': 'uk-form-label'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'md-input'}}) }}
    </div>
    <div class="uk-form-row">
        {{ form_label(form.description, null, {'label_attr': {'class': 'uk-form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'md-input', 'rows': 3, 'cols': 10}}) }}
    </div>
    <div class="uk-form-row">
        {{ form_label(form.contacts) }}
        {{ form_widget(form.contacts, {'id': 'kUI_multiselect_contacts'}) }}
    </div>
   
    <div class="uk-modal-footer uk-text-right">
        <button type="button" class="md-btn md-btn-flat uk-modal-close">{{ "button.close"|trans }}</button>
        <button class="md-btn md-btn-success" type="submit">
            {% if group is defined %}
                {{ 'button.update'|trans }}
            {% else %}
                {{ 'button.add'|trans }}
            {% endif %}
            <i class="fa fa-check"></i>
        </button>
    </div>
{{ form_end(form) }}

