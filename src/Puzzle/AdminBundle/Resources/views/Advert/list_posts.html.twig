{% trans_default_domain 'messages' %}

{% extends 'AdminBundle:Advert:layout.html.twig' %}

{% block title %}{{ parent() }} - {{ "advert.post.list"|trans|capitalize }}{% endblock %}

{% block headingactions %}
<div class="heading_actions">
    <a href="{{ url('admin_advert_post_create') }}">
       	<span class="uk-text-bold">{{ "button.add"|trans|upper }}</span>
        <i class="fa fa-plus-circle"></i>
    </a>
</div>
{% endblock %}

{% block breadcrumbmodule %}
    {{ parent() }}
	<em>{{ "advert.post.list"|trans|capitalize }}</em>
{% endblock %}

{% block content %}
<div id="page_content_inner">
    <div class="md-card">
        {% if posts is not empty %}
            <div class="md-card-toolbar toggle-action uk-hidden">
                <div class="md-card-toolbar-actions">
                    <div class="uk-button-dropdown" data-uk-dropdown="{'mode' : 'click', 'position' : 'bottom-right'}">
                        <a class="uk-text-primary uk-text-bold">
                            {{ 'layout.multiple_actions'|trans }}
                            <i class="fa fa-chevron-down"></i>
                        </a>
                        <div class="uk-dropdown uk-dropdown-small">
                            <ul class="uk-nav uk-nav-dropdown">
                                <li>
                                    <a href="#" class="remove-list" data-uk-modal="{target:'#remove_list_modal'}">
                                        <i class="fa fa-trash-o uk-text-danger"></i> 
                                        {{ "button.remove"|trans }}
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <input type="hidden" value="{{ posts|length|default('0') }}" id="toggle-items-count">
                    <input type="hidden" value="0" id="toggle-items-checked-count">
                </div>
            </div>
        {% endif %}
        <div class="md-card-content">
            <table id="dt_individual_search" class="uk-table uk-table-hover" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th></th>
                    <th>{{ "advert.post.name"|trans }}</th>
                    <th>{{ "advert.post.category"|trans }}</th>
                    <th>{{ "advert.post.expiresAt"|trans }}</th>
                    <th>{{ "advert.post.isPinned"|trans }}</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                        <tr class="toggleable" id="item-{{ post.id }}">
                            <td>
                                <a class="uk-text-muted uk-text-small uk-text-left toggleable-btn-select" href="#">
                                    <i class="material-icons md-24 toggle-icon toggle-item" id="toggle-item-{{ post.id }}">&#xE835;</i>
                                </a>
                            </td>
                            <td>
                            	<div class="uk-text-truncate" style="width: 250px;">
                                    <a href="{{ url('admin_advert_post_update', {'id': post.id}) }}" title="{{ post.name }}">
                                        {{ post.name }}
                                    </a>
                                </div>
                            </td>
                            <td>{{ post.category.name }}</td>
                            <td><small>{{ post.expiresAt|date('d-m-y H:i')|default('-') }}</small></td>
                            <td><input type="checkbox" value="{{ post.isPinned }}" disabled=""></td>
                            <td class="uk-text-right">
                                <div class="uk-button-dropdown" data-uk-dropdown="{mode:'click', pos:'bottom-right'}">
                                    <a><i class="fa fa-ellipsis-h"></i></a>
                                    <div class="uk-dropdown uk-dropdown-small uk-dropdown-bottom uk-text-left" aria-hidden="true">
                                        <ul class="uk-nav uk-nav-dropdown">
                                            <li>
                                                <a href="{{ url('admin_advert_post_update', {'id': post.id}) }}">
                                                    <i class="fa fa-pencil"></i>
                                                    {{ "button.update"|trans }}
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" alt="{{ "button.remove"|trans }}" data-route="{{ url('admin_advert_post_delete', {'id': post.id}) }}" data-text="{{ 'advert.post.delete'|trans({'%postName%': post.name}) }}" data-label="{{ post.name }}" class="remove-item">
                                                    <i class="fa fa-trash-o uk-text-danger"></i>
                                                    {{ "button.remove"|trans }}
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}