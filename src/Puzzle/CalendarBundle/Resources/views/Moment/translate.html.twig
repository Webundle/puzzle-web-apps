{% trans_default_domain 'messages' %}

{% set subactive = "admin_calendar_moments" %}

{% extends 'CalendarBundle::layout_editor.html.twig' %}

{% block title %}{{ parent() }} - {{ "calendar.content.moment.translate" }} {{ moment.title }} {% endblock %}

{% block content %}
    <div id="page_content">
        <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
            <h1>{{ "calendar.title"|trans|capitalize }} - {{ "calendar.content.moment.translate"|trans|capitalize }}</h1>
            <span class="sub_heading">
                <a href="{{ url('admin_calendar_moment', {'id': moment.id}) }}">
                    <i class="material-icons">&#xE5C4;</i>
                    {{ "button.back"|trans }}
                </a>
                /
                <em>{{ moment.title }}</em>
            </span>
        </div>
        <div id="page_content_inner">
            {{ form_start(form) }}
            <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
                <div class="uk-width-7-10 uk-container-center">
                    <div class="md-card">
                        <div class="md-card-content">
                            <div class="uk-form-row">
                                {{ form_label(form.locale) }}
                                {{ form_widget(form.locale) }}
                            </div>
                            <div class="uk-form-row">
                                {{ form_label(form.title) }}
                                {{ form_widget(form.title) }}
                            </div>
                            <div class="uk-form-row">
                                {{ form_label(form.tags) }}
                                {{ form_widget(form.tags, {'value': moment.tags|join(',')}) }}
                            </div>
                            <div class="uk-form-row">
                                {{ form_label(form.slug) }}
                                {{ form_widget(form.slug) }}
                            </div>
                            <div class="uk-form-row">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description, {'id': 'wysiwyg_ckeditor'}) }}
                            </div>
                        </div>
                    </div>
                    <div class="uk-text-center uk-margin-top">
                        {{ form_widget(form.save) }}
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

