{% trans_default_domain 'app' %}

{% extends 'AppBundle::layout.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block pagetitle %}
<h2><i class="fa fa-user"></i> {{ app.user }} <span>Paramètres du Compte</span></h2>
{% endblock %}

{% block pagecontent %}
{% import 'AppBundle:User:macro.html.twig' as tpl %}
<div class="row">
	<div class="col-xs-12">
        <div class="panel panel-default">
        	{{ form_start(form) }}
        		<div class="panel-heading">
        			<h4 class="panel-title">Modifier vos paramètres</h4>
        		</div>
        		
        		<div class="panel-body">
        			<div class="row">
        				<div class="col-xs-12 col-md-6">
        					<div class="row">
        						<div class="col-xs-12 col-sm-6">
        							<h4 class="panel-title mb20">{{ 'form.title.personal'|trans }}</h4>
        						</div>
        					</div>
        					
        					{{ tpl.form_row(form.lastName) }}
        					
        					{{ tpl.form_row(form.firstName) }}
        					
        					{{ tpl.form_row(form.phoneNumber) }}
        					
        					{{ tpl.form_row(form.postBox) }}
        					
        					{{ tpl.form_row(form.address) }}
        				</div>
        				
        				<div class="col-xs-12 col-md-6">
        					<div class="row">
        						<div class="col-xs-12 col-sm-6">
        							<h4 class="panel-title  mb20">{{ 'form.title.account'|trans }}</h4>
        						</div>
        					</div>
        					
        					{{ tpl.form_row(form.username) }}
        					
        					{{ tpl.form_row(form.email) }}
        				</div>
        			</div>
        		</div>
        		
        		<div class="panel-footer">
			        {{ form_widget(form.submit) }}
        			<a href={{ path('app_user_profil') }} class="btn btn-default mr5">Annuler</a>
        		</div>
        	{{ form_end(form) }}
        </div>
	</div>
</div>
{% endblock %}
