{% trans_default_domain 'app' %}

{% extends "AppBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - {{ 'app.contact.title'|trans }}{% endblock %}

{% block content %}
	<div class="page-title parallax parallax1" {% if page is not empty and page.picture is not empty %}style="background-image: url({{ page.picture }})"{% endif %}>
        <div class="overlay"></div>
        <div class="container">
            <div class="page-title-content text-center">
                <div class="page-title-heading ">
                    <h2 class="title text-white font-weight-700">
                        {{ 'app.contact.title'|trans|upper }}
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <div class="content-wrap main-contact-page pd-top-80 pd-bottom-80">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3961.5759286332923!2d-5.280151085827263!3d6.821318421523294!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xfb89124b9176f79%3A0x809aa6d8c7480844!2sRadio+Jam!5e0!3m2!1sfr!2sci!4v1544718333926" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
            <div class="wrap-contact-page pd-top-80 ">
                <div class="container">
                     <div class="row">
                        <div class="col-md-9 col-sm-12">
                            <div class=" flat-form-contact-us"> 
                                <div class="flat-title">
                                    <h3 class="title">{{ 'app.contact.message'|trans }}</h3>
                                </div>

                                <form class="form-contact-us page-contact" id="form-contact-us" action="{{ url('app_contact_create') }}" method="POST">
                                    <div class="row">
                                        <div class="col-sm-6 col-xs-12">
                                            <input type="text" class="name" name="name" required="" placeholder="{{ 'contact.property.contact.fullName'|trans({}, 'messages') }}">
                                        </div>
                                        <div class="col-sm-6 col-xs-12">
                                            <input type="text" name="email" class="mail" required="" placeholder="{{ 'contact.property.contact.email'|trans({}, 'messages') }}">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6 col-xs-12">
                                            <input type="text" name="phoneNumber" class="style3"  placeholder="{{ 'contact.property.contact.phoneNumber'|trans({}, 'messages') }}" required="">
                                        </div>
                                        <div class="col-sm-6 col-xs-12">
                                            <input type="text" name="subject" class="style3"  placeholder="{{ 'contact.property.contact.subject'|trans({}, 'messages') }}" required="">
                                        </div>
                                    </div>
                                    <div class="input-wrap-message">
                                        <textarea name="message" class="message" required="" placeholder="{{ 'contact.property.contact.message'|trans({}, 'messages') }}"></textarea>
                                    </div>
                                    <div class="text-left">
                                        <button type="submit" id="btn-comment" class="btn-effect" name="btn-comment">
                                            {{ 'app.contact.button'|trans }}
                                        </button>
                                    </div>
                                </form>  
                            </div>
                        </div>

                        <div class="col-md-3 col-sm-12">
                            <div class="sidebar-right">
                                <div class="widget widget-logo-info widget-text sidebar-right">
                                    <div class="flat-title">
                                        <h3 class="title">{{ 'app.contact.address'|trans }}</h3>
                                    </div>
                                    {% set infos = render_app_website_infos() %}
                                    <ul class="info">
                                        {% set phones = infos.phoneNumber|split('/') %}
                                        <li class="phone">
                                            {% for phone in phones %}
                                                {{ phone }}<br/>
                                            {% endfor %}
                                        </li>
                                        <li class="mail">{{ infos.email }}</li>
                                        <li class="address">{{ infos.contact }}</li>   
                                    </ul>
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{  parent() }}
    {% javascripts
        'bundles/contact/js/contact.js'
        output="compiled/js/app-contact.min.js" 
    %}
    	<script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}