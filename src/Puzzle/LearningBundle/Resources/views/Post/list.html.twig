{% trans_default_domain 'messages' %}

{% extends 'LearningBundle::layout_table.html.twig' %}

{% block title %}{{ parent() }} - {{ "learning.content.post.list"|trans|capitalize }}{% endblock %}

{% block headingactions %}
<div class="heading_actions">
    <a href="{{ url('admin_learning_post_create') }}">
       	<span class="uk-text-bold">{{ "button.add"|trans|upper }}</span>
        <i class="material-icons md-24">&#xE147;</i>
    </a>
</div>
{% endblock %}

{% block breadcrumbmodulelist %}
	<i class="material-icons">keyboard_arrow_right</i>
	<em>{{ "learning.content.post.list"|trans|capitalize }}</em>
{% endblock %}

{% block content %}
<div id="page_content_inner">
    <div class="md-card">
        {% if posts is not empty %}
            <div class="md-card-toolbar">
                <div class="md-card-toolbar-actions">
                    <a href="#" class="md-btn md-btn-flat md-btn-flat-danger remove-list toggle-action uk-hidden" data-uk-modal="{target:'#remove_list_modal'}">
                        <i class="material-icons md-24">&#xE872;</i> 
                        {{ "button.remove_list"|trans }}
                    </a>
                    <a href="#" class="md-btn md-btn-flat md-btn-flat-primary" id="toggle-check">
                        <i class="material-icons md-24 toggle-icon" id="toggle-check-icon">&#xE835;</i>
                        <span id="toggle-check-text">{{ "button.select_all"|trans }}</span>
                    </a>
                    <input type="hidden" value="{{ posts|length|default('0') }}" id="toggle-items-count">
                    <input type="hidden" value="0" id="toggle-items-checked-count">
                </div>
            </div>
        {% endif %}
        <div class="md-card-content">
            <table id="dt_individual_search" class="uk-table uk-table-hover" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th></th>
                    <th>{{ "learning.property.post.name"|trans }}</th>
                    <th>{{ "learning.property.post.category"|trans }}</th>
                    <th>{{ "learning.property.post.updated_at"|trans }}</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                        <tr class="toggleable" id="item-{{ post.id }}">
                            <td>
                                <a class="uk-text-muted uk-text-small uk-text-left uk-hidden toggleable-btn toggleable-btn-select" href="#">
                                    <i class="material-icons md-24 toggle-icon toggle-item" id="toggle-item-{{ post.id }}">&#xE835;</i>
                                </a>
                            </td>
                            <td>
                            	<div class="uk-text-truncate" style="width: 250px;">
                                    <a href="{{ url('admin_learning_post_update', {'id': post.id}) }}" title="{{ post.name }}">
                                        {{ post.name }}
                                    </a>
                                </div>
                            </td>
                            <td>{{ post.category.name }}</td>
                            <td>{{ post.updatedAt|date('d-m-y H:i') }}</td>
                            <td class="uk-text-right">
                                <a href="{{ url('admin_learning_post_update', {'id': post.id}) }}" alt="{{ "button.update"|trans }}" title="{{ "button.update"|trans }}" class="uk-hidden toggleable-btn">
                                    <i class="md-icon material-icons uk-text-primary">&#xE254;</i>
                                </a>
                                <a href="#remove_item_modal" data-uk-modal="{ center:true }" alt="{{ "button.remove"|trans }}" title="{{ "button.remove"|trans }}" class="uk-hidden toggleable-btn">
                                    <i class="md-icon material-icons uk-text-danger remove-item" id="remove-item-{{ post.id }}">&#xE872;</i>
                                </a>
                                <input type="hidden" id="url-remove-item-{{ post.id }}" value="{{ url('admin_learning_post_delete', {'id': post.id}) }}">
                                <input type="hidden" id="label-remove-item-{{ post.id }}" value="{{ post.name }}">
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}