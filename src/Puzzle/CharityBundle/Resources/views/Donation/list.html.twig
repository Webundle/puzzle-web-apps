{% trans_default_domain 'messages' %}

{% extends 'CharityBundle::layout_table.html.twig' %}

{% block title %}{{ parent() }} - {{ "charity.content.donation.list"|trans|capitalize }}{% endblock %}

{% block headingactions %}
<div class="heading_actions">
    <a href="{{ url('admin_charity_donation_create') }}">
        <span class="uk-text-bold">{{ "button.add"|trans|upper }}</span>
        <i class="material-icons md-24">&#xE147;</i>
    </a>
</div>
{% endblock %}

{% block breadcrumbmodule %}
    {{ parent() }}
    <em>{{ "charity.content.donation.list"|trans|capitalize }}</em>
{% endblock %}

{% block content %}
    <div id="page_content_inner">
        <div class="uk-width-1-1">
            <div class="md-card">
                {% if donations is not empty %}
                    <div class="md-card-toolbar">
                        <div class="md-card-toolbar-actions">
                            <a href="#" class="md-btn md-btn-flat md-btn-flat-danger remove-list toggle-action uk-hidden" data-uk-modal="{target:'#remove_list_modal'}">
                                <i class="material-icons md-24">&#xE872;</i> 
                                {{ "button.remove_list"|trans|upper }}
                            </a>
                            <a href="#" class="md-btn md-btn-flat md-btn-flat-primary" id="toggle-check">
                                <i class="material-icons md-24 toggle-icon" id="toggle-check-icon">&#xE835;</i>
                                <span id="toggle-check-text">{{ "button.select_all"|trans|upper }}</span>
                            </a>
                            <input type="hidden" value="{{ donations|length|default('0') }}" id="toggle-items-count">
                            <input type="hidden" value="0" id="toggle-items-checked-count">
                        </div>
                    </div>
                {% endif %}
                <div class="md-card-content">
                    <table id="dt_individual_search" class="uk-table uk-table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>{{ "charity.property.donation.author"|trans }}</th>
                                <th>{{ "charity.property.donation.cause"|trans }}</th>
                                <th>{{ "charity.property.donation.donationLines"|trans }}</th>
                                <th>{{ "charity.property.donation.updatedAt"|trans }}</th>
                                <th class="uk-text-center">{{ "charity.property.donation.amountRatio"|trans }}</th>
                                <th class="uk-text-center">{{ "charity.property.donation.status"|trans }}</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for donation in donations %}
                                <tr class="toggleable" id="item-{{ donation.id }}">
                                    <td>
                                        <a class="uk-text-muted uk-text-small uk-text-left uk-hidden toggleable-btn toggleable-btn-select" href="#">
                                            <i class="material-icons md-24 toggle-icon toggle-item" id="toggle-item-{{ donation.id }}">&#xE835;</i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="{{ url('admin_charity_donation_update', {'id': donation.id}) }}">{{ donation.name }}</a>
                                    </td>
                                    <td>{{ donation.author }}</td>
                                    <td>{{ donation.cause.name }}</td>
                                    <td>{{ donation.donationLines|length|default("0") }}</td>
                                    <td class="uk-text-center">{{ donation.amountRatio }}%</td>
                                    <td class="uk-text-center">
                                        {% if donation.isClosable == true %}
                                            {% if donation.isClosed == true %}
                                                <span class="uk-badge uk-badge-success">{{ "text.close"|trans }}</span>
                                            {% else %}
                                                <span class="uk-badge uk-badge-warning">{{ "text.in_progress"|trans }}</span>
                                            {% endif %}
                                        {% else %}
                                            <span class="uk-badge uk-badge-dark">{{ "text.unlimited"|trans }}</span>
                                        {% endif %}
                                    </td>
                                    <td class="uk-text-right">
                                        <a href="{{ url('admin_charity_donation_update', {'id': donation.id}) }}" data-uk-tooltip="{pos:'bottom'}" title="{{ "button.update"|trans }}" class="uk-hidden toggleable-btn" alt="{{ "button.update"|trans }}">
                                            <i class="material-icons md-icon uk-text-primary">&#xE3C9;</i>
                                        </a>
                                        <a href="#remove_item_modal" data-uk-modal="{ center:true }" class="uk-hidden toggleable-btn" title="{{ "button.remove"|trans }}" alt="{{ "button.remove"|trans }}">
                                            <i class="md-icon material-icons uk-text-danger remove-item" id="remove-item-{{ donation.id }}">&#xE872;</i>
                                        </a>
                                        <input type="hidden" id="url-remove-item-{{ donation.id }}" value="{{ url('admin_charity_donation_delete', {'id': donation.id})}}">
                                        <input type="hidden" id="label-remove-item-{{ donation.id }}" value="{{ donation.author }}">
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}