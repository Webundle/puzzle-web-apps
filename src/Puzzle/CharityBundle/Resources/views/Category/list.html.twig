{% trans_default_domain 'messages' %}

{% extends 'CharityBundle::layout_table.html.twig' %}

{% block title %}{{ parent() }} - {{ "charity.content.category.list"|trans|capitalize }}{% endblock %}

{% block headingactions %}
<div class="heading_actions">
    <a href="{{ url('admin_charity_category_create') }}">
       	<span class="uk-text-bold">{{ "button.add"|trans|upper }}</span>
        <i class="material-icons md-24">&#xE147;</i>
    </a>
</div>
{% endblock %}

{% block breadcrumbmodule %}
    {{ parent() }}
	<em>{{ "charity.content.category.list"|trans|capitalize }}</em>
{% endblock %}

{% block content %}
     <div id="page_content_inner">
        <div class="uk-width-medium-8-10 uk-container-center">
            <div class="md-card">
                {% if categories is not empty %}
                    <div class="md-card-toolbar">
                        <div class="md-card-toolbar-actions">
                            <a href="#" class="md-btn md-btn-flat md-btn-flat-danger remove-list toggle-action uk-hidden" data-uk-modal="{target:'#remove_list_modal'}">
                                <i class="material-icons md-24">&#xE872;</i> 
                                {{ "button.remove_list"|trans }}
                            </a>
                            <a href="#" class="md-btn md-btn-flat md-btn-flat-primary" id="toggle-check">
                                <i class="material-icons md-24 toggle-icon" id="toggle-check-icon">&#xE835;</i>
                                <span id="toggle-check-text">{{ "button.select_all"|trans }}</span>
                            </a>
                            <input type="hidden" value="{{ categories|length|default('0') }}" id="toggle-items-count">
                            <input type="hidden" value="0" id="toggle-items-checked-count">
                        </div>
                    </div>
                {% endif %}
                <div class="md-card-content">
                    <table id="dt_individual_search" class="uk-table uk-table-hover" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th></th>
                            <th>{{ "charity.property.category.name"|trans }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for category in categories %}
                                <tr class="toggleable" id="item-{{ category.id }}">
                                    <td>
                                        <a class="uk-text-muted uk-text-small uk-text-left uk-hidden toggleable-btn toggleable-btn-select" href="#">
                                            <i class="material-icons md-24 toggle-icon toggle-item" id="toggle-item-{{ category.id }}">&#xE835;</i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="{{ url('admin_charity_category_update', {'id': category.id}) }}">{{ category.name }}</a>
                                    </td>
                                    <td class="uk-text-right">
                                        {% if category.childNodes is not empty %}
                                            <a href="{{ url('admin_charity_category_show', {'id': category.id}) }}" alt="{{ "button.show"|trans }}" title="{{ "button.show"|trans }}" class="uk-hidden toggleable-btn">
                                                <i class="md-icon material-icons uk-text-primary">&#xE8F4;</i>
                                            </a>
                                        {% endif %}
                                        <a href="{{ url('admin_charity_category_update', {'id': category.id}) }}" data-uk-tooltip="{pos:'bottom'}" title="{{ "button.update"|trans }}" class="uk-hidden toggleable-btn" alt="{{ "button.update"|trans }}">
                                            <i class="material-icons md-icon uk-text-primary">&#xE3C9;</i>
                                        </a>
                                        <a href="#remove_item_modal" data-uk-modal="{ center:true }" class="uk-hidden toggleable-btn" title="{{ "button.remove"|trans }}" alt="{{ "button.remove"|trans }}">
                                            <i class="md-icon material-icons uk-text-danger remove-item" id="remove-item-{{ category.id }}">&#xE872;</i>
                                        </a>
                                        <input type="hidden" id="url-remove-item-{{ category.id }}" value="{{ url('admin_charity_category_delete', {'id': category.id})}}">
                                        <input type="hidden" id="label-remove-item-{{ category.id }}" value="{{ category.name }}">
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
